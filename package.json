{
  "name": "mern-authentication-starter",
  "version": "1.0.0",
  "description": "A starter for authentication in a full stack MERN application",
  "main": "server.js",
  "scripts": {
    "start": "node backend/dist/server.js",
    "server": "nodemon backend/server.ts",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnIrle/MERN-authentication-starter.git"
  },
  "author": "John Irle <irlejohn@gmail.com> (http://johnirle.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JohnIrle/MERN-authentication-starter/issues"
  },
  "homepage": "https://github.com/JohnIrle/MERN-authentication-starter#readme",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "colors": "1.4.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-async-handler": "1.1.4",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.10.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.9",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongoose": "5.10.1",
    "@types/node": "14.14.9",
    "concurrently": "5.3.0",
    "nodemon": "2.0.6",
    "ts-node": "9.0.0",
    "typescript": "4.1.2"
  }
}
